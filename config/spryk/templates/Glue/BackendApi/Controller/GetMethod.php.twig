        {% set items = [] %}
        {% for inputParams in input.value %}
            {% set explodedParams = inputParams | split(',') -%}

            {% for param in explodedParams -%}
                {% set paramName = param | split('$') -%}
                {% set item = '$' ~ paramName[1] -%}
                {% set items = items | merge([item]) %}
            {% endfor -%}
        {% endfor -%}

        ${{ zedDomainEntity | lcfirst }}CriteriaTransfer = $this->getFactory()
        ->createGlueRequest{{ zedDomainEntity }}Mapper()
        ->mapIdentifierTo{{ zedDomainEntity }}CriteriaTransfer({{ items | join(', ') }});

        ${{ zedDomainEntity | lcfirst }}CollectionTransfer = $this->getFactory()
            ->get{{ dataModule }}Facade()
            ->get{{ zedDomainEntity }}Collection(${{ zedDomainEntity | lcfirst }}CriteriaTransfer);

        return $this->getFactory()
            ->createGlueResponse{{ zedDomainEntity }}Mapper()
            ->map{{ zedDomainEntity }}CollectionTransferToSingleResourceGlueResponseTransfer(${{ zedDomainEntity | lcfirst }}CollectionTransfer);

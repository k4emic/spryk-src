        {% set items = [] %}
        {% for inputParams in input.value %}
            {% set explodedParams = inputParams | split(',') -%}

            {% for param in explodedParams -%}
                {% set paramName = param | split('$') -%}
                {% set item = '$' ~ paramName[1] -%}
                {% set items = items | merge([item]) %}
            {% endfor -%}
        {% endfor -%}

        ${{ zedDomainEntity | lcfirst }}CollectionRequestTransfer = $this->getFactory()
            ->createGlueRequest{{ zedDomainEntity }}Mapper()
            ->map{{ zedDomainEntity }}TransferTo{{ zedDomainEntity }}CollectionRequestTransfer({{ items | join(', ') }});

        ${{ zedDomainEntity | lcfirst }}CollectionResponseTransfer = $this->getFactory()
            ->get{{ dataModule }}Facade()
            ->update{{ zedDomainEntity }}Collection(${{ zedDomainEntity | lcfirst }}CollectionRequestTransfer);

        return $this->getFactory()
            ->createGlueResponse{{ zedDomainEntity }}Mapper()
            ->map{{ zedDomainEntity }}CollectionResponseTransferToGlueResponseTransfer(${{ zedDomainEntity | lcfirst }}CollectionResponseTransfer);
